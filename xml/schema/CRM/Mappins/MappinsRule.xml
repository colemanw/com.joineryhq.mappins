<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Mappins</base>
  <class>MappinsRule</class>
  <name>civicrm_mappins_rule</name>
  <comment>Rules for map pins</comment>
  <add>4.7</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique MappinsRule ID</comment>
    <add>4.7</add>
  </field>
  <field>
    <name>criteria</name>
    <required>true</required>
    <type>varchar</type>
    <length>255</length>
    <add>4.7</add>
    <comment>Type of rule (e.g., group, tag)</comment>
  </field>
  <field>
    <name>value</name>
    <required>true</required>
    <type>varchar</type>
    <length>255</length>
    <add>4.7</add>
    <comment>Value to filter on</comment>
  </field>
  <field>
    <name>uf_group_id</name>
    <title>Profile</title>
    <pseudoconstant>
      <callback>CRM_Mappins_BAO_MappinsRule::getUFGroupOptions</callback>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
    <type>varchar</type>
    <length>255</length>
    <default>NULL</default>
    <comment>Rule applies only to these profiles. Implicit FK to civicrm_uf_group.id</comment>
    <add>4.7</add>
  </field>  
  <field>
    <name>image_url</name>
    <required>true</required>
    <type>varchar</type>
    <length>255</length>
    <add>4.7</add>
    <comment>URL for pin image</comment>
  </field>
  <field>
    <name>is_active</name>
    <title>Is Active</title>
    <type>boolean</type>
    <default>1</default>
    <comment>Is this mappins_rule enabled</comment>
    <add>4.7</add>
  </field>
  <field>
    <name>weight</name>
    <title>Order</title>
    <type>int</type>
    <default>1</default>
    <comment>Relative order of this mappins_rule; lowest weights sort first.</comment>
    <add>4.7</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <index>
    <name>index_uf_group_id</name>
    <fieldName>uf_group_id</fieldName>
  </index>
</table>
